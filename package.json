{
  "name": "mozillscpp",
  "displayName": "Mozilla C++ Intellisense Provider",
  "description": "A C++ intellisense provider for the Mozilla source code.",
  "version": "0.1.0",
  "preview": true,
  "publisher": "fractalbrew",
  "author": {
    "name": "Dave Townsend",
    "email": "dtownsend@oxymoronical.com",
    "url": "https://www.oxymoronical.com"
  },
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FractalBrew/vscode-mozillacpp.git"
  },
  "homepage": "https://github.com/FractalBrew/vscode-mozillacpp/blob/master/README.md",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "c++",
    "Mozilla",
    "Firefox",
    "Gecko",
    "mach"
  ],
  "icon": "icon.png",
  "extensionDependency": [
    "vscode.cpptools"
  ],
  "activationEvents": [
    "workspaceContains:mach",
    "onCommand:mozillacpp.resetIntellisense"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "mozillacpp.resetIntellisense",
        "title": "Reset Intellisense",
        "category": "Gecko"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Mozilla Intellisense",
      "properties": {
        "mozillacpp.compiler.cpp": {
          "type": "string",
          "default": "",
          "description": "Override the automatically detected compiler for cpp files.",
          "scope": "window"
        },
        "mozillacpp.compiler.c": {
          "type": "string",
          "default": "",
          "description": "Override the automatically detected compiler for c files.",
          "scope": "window"
        },
        "mozillacpp.mach": {
          "type": "string",
          "default": "",
          "description": "The path to a custom mach to use.",
          "scope": "window"
        },
        "mozillacpp.mach_env": {
          "type": "object",
          "default": {},
          "description": "Environment variables to set before running mach.",
          "scope": "window"
        },
        "mozillacpp.log_level": {
          "type": "string",
          "enum": [
            "never",
            "debug",
            "log",
            "warn",
            "error",
            "none"
          ],
          "default": "warn",
          "description": "The level of logging shown in the Output window.",
          "scope": "window"
        },
        "mozillacpp.log_show_level": {
          "type": "string",
          "enum": [
            "never",
            "debug",
            "log",
            "warn",
            "error",
            "none"
          ],
          "default": "none",
          "description": "A log of this level will cause the Output channel to open automatically.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "split-string": "^6.1.0"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "vrsource-tslint-rules": "^6.0.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42",
    "vscode-cpptools": "^2.1.2",
    "vscode-jsonrpc": "3.5.0"
  }
}
